{
    "manifest_version": 2,
    "name": "Rude Gmail Smart Reply",
    "description": "Gmail smart reply but without the pleasantness.",
    "version": "1.2",
    "content_scripts": [
        {
            "matches": [
                "*://mail.google.com/*"
            ],
            "include_globs" :   ["*#inbox*"],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": { "128": "icon-128.png" }
}
